# Compose image tags
POSTGRES_IMAGE_TAG=16-alpine
REDPANDA_IMAGE_TAG=v24.2.8

# Compose host ports
POSTGRES_PORT=5432
DOCUMENT_SERVICE_PORT=8081
GATEWAY_PORT=8080
WEB_PORT=5173
REDPANDA_KAFKA_PORT=9092
REDPANDA_ADMIN_PORT=9644

# Database credentials
POSTGRES_DB=relaydocs
POSTGRES_USER=relaydocs
POSTGRES_PASSWORD=relaydocs

# Gateway runtime
ALLOW_DEV_TOKENS=true
JWT_SECRET=relaydocs-local-compose-jwt-secret-0123456789

# Web build/runtime defaults
WEB_BUILD_GATEWAY_BASE_URL=
VITE_DEV_TOKEN=dev-token-u1

# Eventing
RELAYDOCS_KAFKA_EVENTS_ENABLED=false
RELAYDOCS_KAFKA_TOPIC=relaydocs.domain-events
